@model LiteCommerce.DomainModels.Country
@{
    ViewBag.Title = "Input";
}

<div class="container pt-4">

    <div class="row">
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border" style="color:red; font-weight:bold">
                    @Html.ValidationSummary()
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form" action="~/Country/Input" method="post">
                    <div class="box-header text-right">
                        <a href="~/Country">Back to List</a>
                    </div>
                    <div class="box-body">
                        <input type="hidden" value="@Model.CountryID" name="CountryID" />
                        <div class="form-group">
                            <label for="exampleInputEmail1">Country Name</label>
                            <input type="text" class="form-control" placeholder="CountryName" value="@Model.CountryName" name="CountryName">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Phone</label>
                            <input type="text" class="form-control" placeholder="Code" value="@Model.Code" name="Code">
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="fa fa-save"></i> Save
                        </button>
                        <a class="btn btn-sm btn-default" href="~/Country">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>


