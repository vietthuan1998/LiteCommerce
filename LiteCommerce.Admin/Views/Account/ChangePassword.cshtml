
@{

}

<div class="register-box" style="margin:0 auto; width:550px">
    <div class="register-logo">
        <b>Lite</b>Commmerce
    </div>
    <!-- /.register-logo -->
    <div class="register-box-body">
        <p class="register-box-msg">@ViewBag.Mesage</p>
        <form action="~/Account/ChangePassword" method="post">
            @{
                var userData = User.GetUserData();
            }
            <div class="form-group has-feedback">
                <input name="email" type="email" class="form-control" placeholder="Email" value="@userData.UserID" readonly>
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input name="oldPassword" type="password" class="form-control" placeholder="Old Password" autofocus>
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input name="newPassword" type="password" class="form-control" placeholder="New Password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input name="confirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <b class="text-red">
                        @Html.ValidationSummary()
                    </b>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Change</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
    <!-- /.register-box-body -->
</div>

