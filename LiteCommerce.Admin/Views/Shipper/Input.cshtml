@model LiteCommerce.DomainModels.Shipper
@{
    
}

<div class="container pt-4">
    
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        @Html.ValidationMessage("")
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" action="~/Shipper/Input" method="post">
                        <div class="box-header text-right">
                            <a href="~/Shipper">Back to List</a>
                        </div>
                        <div class="box-body">
                            <input type="hidden" value="@Model.ShipperID" name="ShipperID" />
                            <div class="form-group">
                                <label for="exampleInputEmail1">Name</label>
                                <input type="text" class="form-control" placeholder="Name" value="@Model.CompanyName" name="CompanyName">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Phone</label>
                                <input type="text" class="form-control" placeholder="Phone" value="@Model.Phone" name="Phone">
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-sm btn-primary">
                                <i class="fa fa-save"></i> Save
                            </button>
                            <a class="btn btn-sm btn-default" href="~/Shipper">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    
</div>

